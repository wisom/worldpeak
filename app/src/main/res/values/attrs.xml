<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GradientStrokeTextView">
        <!--描边颜色-->
        <attr name="strokedColor" format="color" />
        <!--描边宽度-->
        <attr name="strokedWidth" format="dimension" />
        <!--渐变开始颜色-->
        <attr name="startColor" format="color" />
        <!--渐变中间颜色-->
        <attr name="middleColor" format="color" />
        <!--渐变结束颜色-->
        <attr name="endColor" format="color" />
        <!--阴影颜色-->
        <attr name="shadowColorX" format="color" />
    </declare-styleable>


    <declare-styleable name="CommonTitleBar">
        <!--标题文字-->
        <attr name="title" format="string" />
        <!--标题颜色-->
        <attr name="titleColor" format="color" />
        <!--标题大小-->
        <attr name="titleSize" format="dimension" />
        <!--标题style-->
        <!--0=正常；1=加粗；2=斜体；3=加粗斜体-->
        <attr name="titleStyle" format="integer" />

        <!--右边文字-->
        <attr name="rightText" format="string" />
        <!--右边文字颜色-->
        <attr name="rightTextColor" format="color" />
        <!--右边文字大小-->
        <attr name="rightTextSize" format="dimension" />

        <!--返回键图标-->
        <attr name="leftResId" format="reference" />

        <!--隐藏左边图标-->
        <attr name="hideLeftIcon" format="boolean" />
        <!--展示右边图标-->
        <attr name="showRightIcon" format="boolean" />
        <attr name="rightIconResId" format="reference" />
    </declare-styleable>


    <declare-styleable name="DashView">
        <attr name="dashWidth" format="dimension" />
        <attr name="lineHeight" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="dashOrientation" format="integer" />
    </declare-styleable>

    <declare-styleable name="LineControllerView">
        <!-- 名称 -->
        <attr name="name" format="string"/>
        <!-- 内容或当前状态 -->
        <attr name="subject" format="string"/>
        <!-- 是否是列表中最后一个 -->
        <attr name="isBottom" format="boolean"/>
        <!-- 是否可以跳转 -->
        <attr name="canNav" format="boolean"/>
        <!-- 是否是开关 -->
        <attr name="isSwitch" format="boolean"/>
    </declare-styleable>
</resources>