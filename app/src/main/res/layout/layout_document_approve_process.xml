<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/avatarBg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_bg_blue_radius_4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:translationX="-2dp"
        android:translationY="-3dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatarBg"
        app:layout_constraintEnd_toEndOf="@+id/avatarBg"
        app:layout_constraintStart_toEndOf="@+id/avatarBg"
        app:layout_constraintTop_toBottomOf="@+id/avatarBg"
        tools:src="@drawable/ic_status_check" />

    <TextView
        android:id="@+id/tvSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/avatarBg"
        app:layout_constraintEnd_toEndOf="@+id/avatarBg"
        app:layout_constraintStart_toStartOf="@+id/avatarBg"
        app:layout_constraintTop_toTopOf="@+id/avatarBg"
        tools:text="何" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#D8000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tvRole"
        app:layout_constraintStart_toEndOf="@+id/avatarBg"
        app:layout_constraintTop_toTopOf="@+id/avatarBg"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="窦汝舰" />

    <TextView
        android:id="@+id/tvRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#72000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/avatarBg"
        app:layout_constraintStart_toEndOf="@+id/avatarBg"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:text="市政府园区主任" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="#72000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/avatarBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avatarBg"
        tools:text="2027 / 03 / 14 12:56" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_bg_gray_radius_4dp"
        android:paddingStart="11dp"
        android:paddingTop="8dp"
        android:paddingEnd="11dp"
        android:paddingBottom="21dp"
        android:textColor="@color/black_65"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/avatarBg"
        tools:text="昔人已乘黄鹤去，此地空余黄鹤楼。黄鹤一去不复返，白云千载空悠悠。晴川历历汉阳树，芳草萋萋鹦鹉洲。日暮乡关何处是？烟波江上使人愁。" />

    <View
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContent" />

