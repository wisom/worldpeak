<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".mine.activity.SettingActivity">

    <com.worldpeak.chnsmilead.view.CommonTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        app:rightText=""
        app:rightIconResId="@drawable/ic_more"
        app:showRightIcon="true"
        app:title="微信解绑"
        app:titleColor="#D8000000"
        app:titleSize="16sp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivAvatar"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="63dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_wechat_big_logo"
        app:shapeAppearance="@style/CircleStyle" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="31dp"
        android:text="绑定微信：微信号"
        android:textColor="#30455C"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>